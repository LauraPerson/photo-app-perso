<div class="container">
  <div class="row flex-center">
    <div class="col-12 col-m-6 col-xl-4 my-4">
      <h2 class="my-3">Modifier la série <%= @serie.name %></h2>
      <%= simple_form_for @serie, url: series_path, method: :patch do |f| %>
        <%= f.input :name, label:"Nom"  %>
        <%= f.input :description, as: :text, label:"Description"  %>
        <%= f.input :archive, label:"Archiver"  %>
        <%= f.input :photos, as: :file, input_html: {multiple: true}, label:"Photos de la série" %>
        <%= f.submit "Modifier la série", class:"btn btn-primary my-3" %>
      <% end %>
    </div>
  </div>
</div>
