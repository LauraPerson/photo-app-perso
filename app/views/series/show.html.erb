<div class="container-gallery">
  <div class="gallery-text">
    <h2 class="gallery-name">
      <%= @serie.name %>
    </h2>
    <p>
      <%= @serie.description %>
    </p>
  </div>
  <div class="gallery">
    <div class="gallery-images">
      <% @serie.images.each do |image| %>
        <div class="image-card">
          <% if image.photo.attached? %>
            <%= image_tag(url_for(image.photo)) %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>    